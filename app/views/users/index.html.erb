<p id="notice"><%= notice %></p>

<h1>Користувачі</h1>

<table>
  <thead>
    <tr>
      <th>Ім'я</th>
      <th>Прізвище</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Показати', user %></td>
        <td><%= link_to 'Редагувати', edit_user_path(user) %></td>
        <td><%= link_to 'Видалити', user, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новий користувач', new_user_path %>
